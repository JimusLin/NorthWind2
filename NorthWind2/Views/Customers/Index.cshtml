@model IEnumerable<NorthWind2.Models.Customers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("新增", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>公司名稱</label>
        </th>
        <th>
            聯絡人
        </th>
        <th>
            頭銜
        </th>
        <th>
            地址
        </th>
        <th>
            城市
        </th>
        <th>
            區域
        </th>
        <th>
            郵遞區號
        </th>
        <th>
            國家
        </th>
        <th>
            連絡電話
        </th>
        <th>
            傳真
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostalCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fax)
        </td>
        <td>
            <input type="button" class="btn btn-info" value="編輯" onclick="location.href='@Url.Action("Edit", "Customers",new { id = item.CustomerID })'" />
            <input type="button" class="btn btn-success" value="詳細" onclick="location.href='@Url.Action("Details", "Customers",new { id = item.CustomerID })'" />
            <input type="button" class="btn btn-warning" value="刪除" onclick="location.href='@Url.Action("Delete", "Customers",new { id = item.CustomerID })'" />
            
        </td>
    </tr>
}

</table>
